                    table += '<th>เลือก</th>';
                    table += '<th>agent</th>';
                    table += '</tr>';
                    table += '</thead>';
                    table += '<tbody>';
                    var ii = 1;
                    for (i = 0; i < mainObj.length; i++) {


                        table += "<tr>";
