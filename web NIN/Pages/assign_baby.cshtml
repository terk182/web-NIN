                        table += "<td class = 'agent_id' hidden>" + mainObj[i].agent_id + "</td>";
                        table += "<td class = 'customer_terk' hidden>" + mainObj[i].custommerID + "</td>";
                        table += "<td class = 'agent_terk' ></td>";





                        table += "</tr>";


                    }
                    table += "</tbody></table>";
