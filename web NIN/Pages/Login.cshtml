@page
@model web_NIN.Pages.LoginModel
@{
}
<div class="container">
    <div class="row">
        <div class="col-md-6 offset-md-3">

            <div class="card my-5">

                <!-- Login Form -->
                <form method="post" class="card-body cardbody-color p-lg-5">

                    <div class="text-danger" asp-validation-summary="ModelOnly"></div>
                    <input type="text" asp-for="_Credential.username" class="form-control" placeholder="User name">
                    <span class="text-danger" asp-validation-for="_Credential.username"></span>
                    <br />
                    <input type="text" asp-for="_Credential.password" class="form-control" placeholder="password">
                    <span class="text-danger" asp-validation-for="_Credential.password"></span>
                    <br />


                    <input type="submit" class="btn btn-primary" value="Login">




                </form>



                <div>


                    <h1>@ViewData["result"]</h1>


                    <h1>@ViewData["count"]</h1>


                </div>
            </div>
        </div>
    </div>
</div>

        
